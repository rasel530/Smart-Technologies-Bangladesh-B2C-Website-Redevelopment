{
  "index_patterns": ["products*"],
  "template": {
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 0,
      "max_result_window": 50000,
      "analysis": {
        "analyzer": {
          "product_name_analyzer": {
            "type": "custom",
            "tokenizer": "standard",
            "filter": [
              "lowercase",
              "stop",
              "stemmer",
              "word_delimiter_graph"
            ]
          },
          "product_search_analyzer": {
            "type": "custom",
            "tokenizer": "keyword",
            "filter": [
              "lowercase",
              "trim"
            ]
          },
          "description_analyzer": {
            "type": "custom",
            "tokenizer": "standard",
            "filter": [
              "lowercase",
              "stop",
              "stemmer"
            ]
          },
          "category_analyzer": {
            "type": "custom",
            "tokenizer": "keyword",
            "filter": [
              "lowercase",
              "trim"
            ]
          }
        }
      }
    },
    "mappings": {
      "properties": {
        "id": {
          "type": "keyword"
        },
        "name": {
          "type": "text",
          "analyzer": "product_name_analyzer",
          "search_analyzer": "product_search_analyzer",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            },
            "suggest": {
              "type": "completion",
              "analyzer": "simple"
            }
          }
        },
        "description": {
          "type": "text",
          "analyzer": "description_analyzer",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 512
            }
          }
        },
        "price": {
          "type": "double",
          "fields": {
            "scaled": {
              "type": "scaled_float",
              "scaling_factor": 100
            }
          }
        },
        "stock_quantity": {
          "type": "integer"
        },
        "category": {
          "type": "text",
          "analyzer": "category_analyzer",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 100
            }
          }
        },
        "is_active": {
          "type": "boolean"
        },
        "created_at": {
          "type": "date",
          "format": "strict_date_optional_time||epoch_millis"
        },
        "updated_at": {
          "type": "date",
          "format": "strict_date_optional_time||epoch_millis"
        },
        "tags": {
          "type": "keyword"
        },
        "brand": {
          "type": "text",
          "analyzer": "category_analyzer",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 100
            }
          }
        },
        "sku": {
          "type": "keyword"
        },
        "weight": {
          "type": "double"
        },
        "dimensions": {
          "properties": {
            "length": {
              "type": "double"
            },
            "width": {
              "type": "double"
            },
            "height": {
              "type": "double"
            }
          }
        },
        "images": {
          "type": "object",
          "properties": {
            "url": {
              "type": "keyword"
            },
            "alt_text": {
              "type": "text",
              "analyzer": "standard"
            },
            "is_primary": {
              "type": "boolean"
            }
          }
        },
        "variants": {
          "type": "nested",
          "properties": {
            "id": {
              "type": "keyword"
            },
            "name": {
              "type": "text",
              "analyzer": "standard"
            },
            "price": {
              "type": "double"
            },
            "stock_quantity": {
              "type": "integer"
            },
            "attributes": {
              "type": "object",
              "dynamic": true
            }
          }
        },
        "attributes": {
          "type": "object",
          "dynamic": true
        },
        "rating": {
          "type": "double"
        },
        "review_count": {
          "type": "integer"
        },
        "sales_count": {
          "type": "integer"
        },
        "view_count": {
          "type": "integer"
        }
      }
    }
  }
}