  "event": [
    {
      "listen": "prerequest",
      "script": {
        "exec": [
          "// Add session cookie if available",
          "if (pm.variables.get('sessionId')) {",
          "  pm.request.headers.add({",
          "    key: 'Cookie',",
          "    value: 'sessionId=' + pm.variables.get('sessionId')",
          "  });",
          "}",
          "",
          "// Set common headers",
          "if (!pm.request.headers.has('Content-Type')) {",
          "  pm.request.headers.add({",
          "    key: 'Content-Type',",
          "    value: 'application/json'",
          "  });",
          "}"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "exec": [
          "// Global test script for error handling",
          "if (pm.response.code >= 400) {",
          "  const response = pm.response.json();",
          "  pm.test.fail(`API Error: ${response.error || 'Unknown error'}`);",
          "  pm.test.fail(`Message: ${response.message || 'No message provided'}`);",
          "  if (response.details) {",
          "    pm.test.fail(`Validation Details: ${JSON.stringify(response.details)}`);",
          "  }",
          "} else {",
          "  pm.test(\"Status code is successful\", function () {",
          "    return pm.response.code < 400;",
          "  });",
          "}",
          "",
          "// Store authentication tokens if present",
          "if (pm.response.code === 200) {",
          "  const response = pm.response.json();",
          "  if (response.token) {",
          "    pm.variables.set('jwtToken', response.token);",
          "  }",
          "  if (response.sessionId) {",
          "    pm.variables.set('sessionId', response.sessionId);",
          "  }",
          "  if (response.user && response.user.id) {",
          "    pm.variables.set('userId', response.user.id);",
          "  }",
          "}"
        ]
      }
    }
  ],
